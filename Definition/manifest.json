{
    "manifest_version": 2,
    "name": "Find Definition (Highlight and Ctrl+Space)",
    "version": "1.0.0",
  
    "description": "Find Definition (Highlight and Ctrl+Space)",
    "icons": {"128": "plane.png"},
  
    "browser_action": {
        "default_icon": "plane.png",
        "default_popup": "popup.html"     
    },
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    
    "background":{
        "scripts": ["background.js"]
    },

    "permissions": [
        "tabs",
        "<all_urls>"
    ],

    "commands": {
        "_execute_browser_action": {
          "suggested_key": {
            "default": "Ctrl+Space",
            "mac": "MacCtrl+Space"
          }
        }
      }
}